<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/BallsTextView"
        android:layout_width="145dp"
        android:layout_height="70dp"
        android:layout_marginTop="68dp"
        android:textSize="60sp"
        app:layout_constraintEnd_toStartOf="@+id/BallsBtn"
        app:layout_constraintHorizontal_bias="0.519"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BallsBtn"
        android:layout_width="145dp"
        android:layout_height="70dp"
        android:layout_marginTop="60dp"
        android:text="@string/BallBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/StrikesBtn"
        android:layout_width="145dp"
        android:layout_height="70dp"
        android:layout_marginTop="92dp"
        android:text="@string/StrikeBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BallsBtn" />

    <Button
        android:id="@+id/Resetbtn"
        android:layout_width="124dp"
        android:layout_height="90dp"
        android:layout_marginBottom="200dp"
        android:text="@string/Reset"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/StrikesTextView"
        android:layout_width="145dp"
        android:layout_height="70dp"
        android:layout_marginTop="96dp"
        android:textSize="60sp"
        app:layout_constraintEnd_toStartOf="@+id/StrikesBtn"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BallsTextView" />

</androidx.constraintlayout.widget.ConstraintLayout>